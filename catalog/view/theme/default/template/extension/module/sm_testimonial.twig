<h3>{{ heading_title }}</h3>
<div class="row">
  {% for testimonial in testimonials %}
  <div class="col-lg-2 col-md-2 col-sm-6 col-xs-12 rew">
    <div class="testimonial-thumb">
	  {% if testimonial.avatar %}
      <p class="image"><img src="{{ testimonial.avatar }}" alt="" class="img-responsive" /></p>
      {% endif %}
	  <div class="caption">
	    {% if testimonial.title %}
        <h4>{{ testimonial.title }}</h4>
	    {% endif %}
        {% if testimonial.good %}
	    <p><strong>{{ entry_good }}</strong><br/>{{ testimonial.good }}</p>
	    {% endif %}
	    {% if testimonial.bad %}
	    <p><strong>{{ entry_bad }}</strong><br/>{{ testimonial.bad }}</p>
	    {% endif %}
	    {% if testimonial.text %}
	    <p><strong>{{ entry_text }}</strong><br/>{{ testimonial.text }}</p>
	    {% endif %}
        {% if testimonial.rating %}
        <p class="rating">
          {% for i in 1..5 %}
          {% if testimonial.rating < i %}
          <span class="fa fa-stack"><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% else %}
          <span class="fa fa-stack"><i class="fa fa-star fa-stack-2x"></i><i class="fa fa-star-o fa-stack-2x"></i></span>
          {% endif %}
          {% endfor %}
        </p>
	    {% endif %}
        {% if testimonial.name or testimonial.city or testimonial.date_added %}
        <p>
          {% if testimonial.name %}
		  <i>{{ testimonial.name }}</i>
		  {% endif %}
		  {% if testimonial.city %}
		  <i>{{ testimonial.city }}</i>
		  {% endif %}
		  {% if testimonial.date_added %}
		  <i>{{ testimonial.date_added }}</i>
		  {% endif %}
        </p>
	    {% endif %}
	    {% if testimonial.image %}
	    <p><strong>{{ entry_image }}</strong></p>
	    <p class="sm-thumbnail sm-thumbnail{{ module }}{{ testimonial.testimonial_id }}">{% for value in testimonial.image %}<a data-thumbnail="{{ module }}{{ testimonial.testimonial_id }}" href="{{ value.thumb }}"><img src="{{ value.thumbnail }}" class="img-thumbnail"></a>{% endfor %}</p>
	    {% endif %}
	  </div>
	  {% if readmore %}
	  <a href="{{ testimonial.href }}" class="btn btn-primary btn-sm">{{ button_readmore }}</a>
	  {% endif %}
    </div>
  </div>
  {% endfor %}
</div>
{% if show_all %}
<div class="row">
  <div class="col-md-12 rew">
    <div class="button-group pull-right">
      <a class="btn btn-primary" href="{{ show_all_url }}">{{ button_show_all }}</a>
    </div>
  </div>
</div>
{% endif %}
{% if image %}
<script type="text/javascript"><!--
	$('.sm-thumbnail a').on('click', function() {
		$('.sm-thumbnail' + $(this).data('thumbnail')).magnificPopup({
			type:'image',
			delegate: 'a',
			gallery: {
			    enabled:true
			}
		});
	});
--></script>
{% endif %}