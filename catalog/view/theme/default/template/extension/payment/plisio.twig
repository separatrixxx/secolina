<form action="{{ action }}" method="post">
    <div class="form-group">
        <div class="buttons">
            <div class="pull-right">
                <input type="submit" value="{{ white_label ? button_confirm_white_label : button_confirm }}" class="btn btn-primary pull-right"/>
            </div>
        </div>
    </div>
</form>
{% if fail %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ fail }}
        <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
{% endif %}
